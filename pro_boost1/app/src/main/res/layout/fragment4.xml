<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:background="#00000000">


    <ImageView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:srcCompat="@drawable/image4" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. 레지던트 이블"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/home_slider1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp">
    <TextView
        android:id="@+id/tv_fragment1_reservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="예매율 61.6%"
        android:textColor="#ffffff"/>

        <View
            android:layout_width="2dp"
            android:layout_height="15dp"
            android:background="#ffffff"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_fragment1_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15세 관람가"
            android:textColor="#ffffff"/>
        <View
            android:layout_width="2dp"
            android:layout_height="15dp"
            android:background="#ffffff"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_fragment1_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D-1"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <Button
        android:id="@+id/button2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="상세보기"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/detailview"

        />
</LinearLayout>