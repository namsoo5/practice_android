<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ScrollView_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/titlebackground">

        <ImageView
            android:id="@+id/im_title"
            android:layout_width="140dp"
            android:layout_height="200dp"
            android:src="@drawable/image11"
            android:layout_margin="10dp"
            android:layout_alignParentLeft="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/im_title"
            android:layout_alignBottom="@id/im_title"
            android:layout_marginLeft="10dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="군도"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="15dp"/>
                <ImageView
                    android:id="@+id/im_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_15"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014.07.23 개봉"
                android:textSize="20dp"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/tv_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="액션 / 137 분"
                android:textSize="17dp"
                android:textColor="#ffffff"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <Button
                      android:id="@+id/bt_like"
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:background="@drawable/bt_up"
                     />

                <TextView
                    android:id="@+id/tv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="5dp"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <Button
                       android:id="@+id/bt_unlike"
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:background="@drawable/bt_down"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/tv_unlike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="5dp"
                    android:textSize="15dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예매율"
                android:textSize="18dp"
                android:textColor="#999999"/>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/tv_reservation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5위 1.8%"
                android:textSize="16dp"
                android:textColor="#999999"
                android:textStyle="bold"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="#eeeeee"/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평점"
                android:textSize="18dp"
                android:textColor="#999999"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <RatingBar
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:id="@+id/ratingbar_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:isIndicator="true"
                    android:max="10"
                    android:numStars="5"
                    android:stepSize="0.1" />
                <TextView
                    android:id="@+id/tv_score"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#999999"
                    android:layout_marginLeft="10dp"/>
                    </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="#eeeeee"/>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="누적관객수"
                android:textSize="18dp"
                android:textColor="#999999"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_audience"
                android:text="839,399명"
                android:textSize="16dp"
                android:textColor="#999999"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#eeeeee"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="줄거리"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="15dp"/>
    <TextView
        android:id="@+id/tv_synopsis"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/movie_info"
        android:textSize="15dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#eeeeee"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="감독/출연"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginBottom="10dp"
        android:textColor="#000000"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="감독"
            android:textSize="15dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tv_director"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="윤종빈"
            android:textSize="15dp"
            android:layout_marginLeft="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="출연"
            android:textSize="15dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tv_actor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="하정우(도치), 강동원(조윤)"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#eeeeee"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="갤러리"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#000000" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#eeeeee"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한줄평"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/bt_review_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작성하기"
            android:drawableLeft="@drawable/ic_review_selected"
            android:textColor="#ff6a00"
            android:textStyle="bold"
            android:background="#00000000"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/lv_review"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true">
        </ListView>
        <Button
            android:id="@+id/bt_allview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="모두보기"
            android:background="@drawable/allview"
            android:layout_below="@id/lv_review"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#eeeeee"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/imbt_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        app:srcCompat="@drawable/ic_facebook" />

    <ImageButton
        android:id="@+id/imbt_kakao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        app:srcCompat="@drawable/ic_kakao" />

    <Button
        android:id="@+id/bt_reserve"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="예매하기"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:background="#ff6a00"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"/>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#eeeeee"/>
</LinearLayout>

</LinearLayout>
</ScrollView>

